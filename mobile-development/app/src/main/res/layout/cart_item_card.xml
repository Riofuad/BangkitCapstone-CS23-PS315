<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/marketplace_item_container"
    android:padding="18dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_item_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription=""
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.MyApp.MediumComponent.AllRounded"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Apple"
        app:layout_constraintStart_toEndOf="@+id/iv_item_photo"
        app:layout_constraintTop_toTopOf="@+id/iv_item_photo" />

    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Rp. 8.000"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_photo"
        app:layout_constraintStart_toEndOf="@+id/iv_item_photo" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:iconGravity="textEnd"
            app:iconSize="16dp"
            app:icon="@drawable/ic_minus_24"
            app:shapeAppearance="@style/ShapeAppearance.MyApp.MediumComponent.LeftRounded" />

        <TextView
            android:id="@+id/tv_item_quantity"
            android:layout_width="40dp"
            android:layout_height="22.5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:background="#E8E8E8"
            android:text="1"
            android:textColor="#BFBFBF"/>

        <com.google.android.material.button.MaterialButton
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:iconGravity="textEnd"
            app:iconSize="16dp"
            app:icon="@drawable/ic_plus_24"
            app:shapeAppearance="@style/ShapeAppearance.MyApp.MediumComponent.RightRounded" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>