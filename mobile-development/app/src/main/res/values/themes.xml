<resources>
    <!-- Base application theme. -->
    <style name="Theme.SiFresh" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/light_green</item>
        <item name="colorSurfaceVariant">@color/gray</item>
        <item name="colorOutline">@color/dark_gray</item>
        <item name="colorPrimaryContainer">@color/light_green</item>
        <item name="colorOnPrimaryContainer">@color/dark_gray</item>

        <item name="colorOnSecondaryContainer">@color/dark_gray</item>
        <item name="colorSecondaryContainer">@color/light_green_80</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorOnSurfaceVariant">@color/light_gray_80</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_green</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Only Top Corner -->
    <style name="ShapeAppearance.MyApp.MediumComponent.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- All Rounded Corner -->
    <style name="ShapeAppearance.MyApp.MediumComponent.AllRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <!-- FAB circle -->
    <style name="ShapeAppearanceOverlay.FloatingActionButton.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Use 50% to create a perfect circle -->
    </style>

    <!-- Toggle Button -->
    <style name="Widget.MaterialComponents.Button.Toggle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:background">#BFBFBF</item>
        <item name="android:textAppearance">@style/Widget.MaterialComponents.Button.Toggle</item>
    </style>

    <!-- Only Left Corner -->
    <style name="ShapeAppearance.MyApp.MediumComponent.LeftRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <!-- Only Right Corner -->
    <style name="ShapeAppearance.MyApp.MediumComponent.RightRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>